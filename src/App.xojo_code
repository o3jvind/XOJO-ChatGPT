#tag Class
Protected Class App
Inherits DesktopApplication
	#tag Event
		Sub Opening()
		  PreferencesModule.Initialize(App.ExecutableFile.Name)
		  
		  If Not Preferences.Load Then
		    // Set default values for preferences so that they 
		    // do not cause a PreferencesNotFoundException when accessed.
		    Preferences.ApiKey = ""
		  End If
		  
		  
		  If Preferences.ApiKey <> "" Then
		    Var w As New ChatWindow
		  Else
		    Var aw As New AboutWindow
		  End if
		End Sub
	#tag EndEvent

	#tag Event
		Function UnhandledException(error As RuntimeException) As Boolean
		  Var msg As String = "An error occurred."
		  MessageBox(msg)
		  
		  Quit
		  Return True
		End Function
	#tag EndEvent


	#tag MenuHandler
		Function AboutItem() As Boolean Handles AboutItem.Action
		  Var w as new AboutWindow
		  Return True
		  
		End Function
	#tag EndMenuHandler

	#tag MenuHandler
		Function FileNewConversation() As Boolean Handles FileNewConversation.Action
		  Var w as new ChatWindow
		  Return True
		  
		End Function
	#tag EndMenuHandler


